##
. proc 2>/dev/null

function show_menu 
{
	echo -e "\nPlease Select a Task to Execute:\n
[1] Change Configuration
[2] Enumerate a Domain
[3] Pingsweep
[4] Portscan
[5] Exit

"
	read -p ">> " opt

	case $opt in
		1)
			set_enum_config
			;;
		2)
			echo null
			show_menu
			;;
		3)
			echo null
			show_menu
			;;
		4)
			echo null
			show_menu
			;;
		5) 
			exit 0
			;;
		*)
			show_menu
			;;
	esac
}


function set_enum_config
{
	show_banner
	echo -e "Your current configuration file:
	
[>] Target IP Address: $HOST
[>] Target Ports: 1-$PORT
[>] Target Domain: $DOMAIN

"
	read -p "Do you want to change your configuration?[y/N]: " getopt
	
	case $getopt in
		[yY]|[yY][eE][sS])
			echo null
			;;
		[nN]|[nN][oO])
			clear
			show_banner
			show_menu
			;;
		*)
			set_enum_config
			;;	
	esac
}
